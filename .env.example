# Grub Crawler Environment Configuration

# Server Configuration
HOST=0.0.0.0
PORT=8080
DEBUG=false

# Storage Configuration
STORAGE_PATH=./storage
RUNNING_IN_CLOUD=false
GCS_BUCKET_NAME=grub-crawl-storage

# Authentication
DISABLE_AUTH=false
GNOSIS_AUTH_URL=http://gnosis-auth:5000

# Crawling Configuration
MAX_CONCURRENT_CRAWLS=5
CRAWL_TIMEOUT=30
ENABLE_JAVASCRIPT=true
ENABLE_SCREENSHOTS=false

# Browser Configuration
BROWSER_HEADLESS=true
BROWSER_TIMEOUT=30000

# Cloud Configuration (for production)
GOOGLE_CLOUD_PROJECT=your-project-id
CLOUD_TASKS_QUEUE=crawl-jobs
CLOUD_TASKS_LOCATION=us-central1
WORKER_SERVICE_URL=https://your-service-url

# ============================================
# Testing Configuration
# ============================================

# API Key for ProductBot and external integrations (optional)
# PRODUCTBOT_API_KEY=your-secret-key-here

# HMAC Secret Key (must match gnosis-ahp for token validation)
# AHP_SECRET_KEY=gnosis-ahp-secret-key-change-in-production
# SECRET_KEY=gnosis-ahp-secret-key-change-in-production

# Remote Integration Tests (test_remote_integration.py)
# Set these to run integration tests against a deployed service
# GRUB_CRAWL_API_URL=https://your-deployed-service.com
# GRUB_CRAWL_CUSTOMER_ID=test-customer-123
# GRUB_CRAWL_BEARER_TOKEN=your-bearer-token-here

# Local Auth Testing
# TEST_API_KEY=test-secret-key-123