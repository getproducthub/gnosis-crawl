# Cloud Deployment Configuration (GCS Storage)
# For production deployments using Google Cloud Storage

# CRITICAL: Enable cloud mode
RUNNING_IN_CLOUD=true

# CRITICAL: Set your GCS bucket name
GCS_BUCKET_NAME=gnosis-crawl-storage

# Optional: Google Cloud Project (auto-detected if running in GCP)
# GOOGLE_CLOUD_PROJECT=your-project-id

# Authentication - Can be enabled or disabled
DISABLE_AUTH=false
GNOSIS_AUTH_URL=http://gnosis-auth:5000

# Server Configuration
HOST=0.0.0.0
PORT=8080
DEBUG=false

# Crawling Configuration
MAX_CONCURRENT_CRAWLS=5
CRAWL_TIMEOUT=30
ENABLE_JAVASCRIPT=true
ENABLE_SCREENSHOTS=false

# Browser Configuration
BROWSER_HEADLESS=true
BROWSER_TIMEOUT=30000
